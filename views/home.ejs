<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head.ejs") %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
      body {
        background: #f8f9fa;
      }
      .dashboard-container {
        max-width: 1050px;
        margin: 0 auto;
        padding-top: 3rem;
      }
      .dashboard-title {
        font-family: 'Segoe UI', Arial, sans-serif;
        font-weight: 700;
      }
      .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.7rem;
        margin-top: 2.5rem;
      }
      .app-card {
        min-height: 220px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 1.2rem;
        transition: box-shadow 0.15s, border-color 0.2s;
        border-width: 0;
      }
      .app-card:hover {
        box-shadow: 0 4px 18px rgba(25,135,84,0.2);
        border: 2px solid #198754;
        cursor: pointer;
      }
      .card-icon {
        font-size: 2rem;
        margin-bottom: 0.8rem;
        color: #198754;
      }
      .card-title {
        font-size: 1.25rem;
        font-weight: 500;
        color: #222;
        margin-bottom: 0.7rem;
      }
      .card-text {
        color: #555;
        font-size: 1rem;
      }
      @media (max-width: 567px) {
        .dashboard-title { font-size: 2rem; }
        .card-grid { grid-template-columns: 1fr; }
      }
    </style>
</head>
<body>
  <div class="dashboard-container">
    <h1 class="dashboard-title text-center display-5 mb-5 text-success">
      Famous Quotes <span class="text-dark">Admin Panel</span>
    </h1>
    <div class="card-grid">

      <a href="/addAuthor" aria-label="Add Author" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-person-plus card-icon"></i>
          <div class="card-title">New Author</div>
          <div class="card-text">Add a new author to the database.</div>
        </div>
      </a>
      <a href="/addQuote" aria-label="Add Quote" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-chat-quote card-icon"></i>
          <div class="card-title">New Quote</div>
          <div class="card-text">Add a new quote to the collection.</div>
        </div>
      </a>
      <a href="/search" aria-label="Search by Keyword" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-search card-icon"></i>
          <div class="card-title">Search by Keyword</div>
          <div class="card-text">Find quotes by word or phrase.</div>
        </div>
      </a>
      <a href="/searchByCategory" aria-label="Search by Category" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-tags card-icon"></i>
          <div class="card-title">Search by Category</div>
          <div class="card-text">Filter quotes based on topic.</div>
        </div>
      </a>
      <a href="/searchByAuthor" aria-label="Search by Author" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-person-lines-fill card-icon"></i>
          <div class="card-title">Search by Author</div>
          <div class="card-text">Browse quotes by specific authors.</div>
        </div>
      </a>
      <a href="/searchByLikes" aria-label="Search by Likes Range" class="text-decoration-none">
        <div class="card app-card shadow-sm text-center">
          <i class="bi bi-heart-pulse card-icon"></i>
          <div class="card-title">Search by Likes Range</div>
          <div class="card-text">Find quotes based on popularity.</div>
        </div>
      </a>

    </div>
  </div>
</body>
<footer>
    <%- include("partials/foot.ejs") %>
</footer>
</html>
